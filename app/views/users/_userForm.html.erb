  <div class="col-md-6">
  <%= form_for @user do |user| %>

    <% if @user.errors.any? %>
      <div class="error_meesages">
        <h2>Form is invalid</h2>
      </div>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <div class="input-group mb-2">
      <%= user.label :user_name, class: "input-group-prepend input-group-text" %>
      <%= user.text_field :user_name, class: "form-cntrol" %>
    </div>

    <div class="input-group mb-2"> 
      <%= user.label :email, class: "input-group-prepend input-group-text" %>
      <%= user.text_field :email, class: "form-control" %>
    </div>

    <div class="input-group mb-2">
      <%= user.label :first_name, class: "input-group-prepend input-group-text" %>
      <%= user.text_field :first_name, class: "form-control" %>
    </div>

    <div class="input-group mb-2">
      <%= user.label :last_name, class: "input-group-prepend input-group-text" %>
      <%= user.text_field :last_name, class: "form-control" %>
    </div>

    <div class="input-group mb-2">
      <%= user.label :password, class: "input-group-prepend input-group-text" %>
      <%= user.password_field :password, class: "form-control" %>
    </div>

    <div class="input-group mb-2">
      <%= user.label :password_confirmation, class: "input-group-prepend input-group-text" %>
      <%= user.password_field :password_confirmation, class: "form-control" %>
    </div>    

    <div class="input-group">
      <%= user.submit class: "btn btn-success" %>
    </div>

  <% end %>
</div>